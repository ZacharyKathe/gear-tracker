<div class="card text-center">
  <div class="card-header">
    {{distance_mi}} miles
    <button type='button' class="close delete-trip" aria-label="Close" data-id={{id}}>
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="card-body">
    <h3 class="card-title">{{name}}</h3>
    <br>
    <h5 class="card-text">{{location}}</h5>
    <p class="card-text">{{description}}</p>
    <p class="card-text gear-weight" data-id={{id}}></p>
    <a href="/dashboard/{{id}}" class="btn btn-primary">Trip Loadout</a>
  </div>
  <div class="card-footer text-muted">
    {{starting_date}} to {{ending_date}}
  </div>
</div>